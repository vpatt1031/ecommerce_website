{
  "name": "ecommerce-website",
  "version": "1.0.0",
  "description": "ecommerce shopping website",
  "main": "index.js",
  "engine": {
    "node": "10.16.0",
    "npm": "6.9.0"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server/index.js",
    "start:dev": "npm run backend && npm run client",
    "backend": "nodemon server/index.js",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run client"
  },
  "author": "John ahn",
  "license": "ISC",
  "dependencies": {
    "@datorama/if-env": "^1.0.0",
    "async": "^3.1.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "dotenv": "^9.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.12.5",
    "multer": "^1.4.2",
    "react-redux": "^5.0.7",
    "socket.io": "^2.4.1"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "nodemon": "^1.19.1"
  }
}
